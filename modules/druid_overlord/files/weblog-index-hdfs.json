{
  "type" : "index_hadoop",
  "spec" : {
    "ioConfig" : {
      "type" : "hadoop",
      "inputSpec" : {
        "type" : "static",
        "paths" : "/user/vagrant/weblog-denormalized"
      }
    },
    "dataSchema" : {
      "dataSource" : "weblogs-hdfs",
      "granularitySpec" : {
        "type" : "uniform",
        "segmentGranularity" : "day",
        "queryGranularity" : "none",
        "intervals" : ["2012-03-01/2012-03-08"]
      },
      "parser" : {
        "type" : "string",
        "parseSpec" : {
          "format" : "tsv",
          "columns" : [
            "date",
            "state",
            "category",
            "age",
            "sex",
            "promotion",
            "referrer",
            "zip"
          ],
          "dimensionsSpec" : {
            "dimensions" : [
              "state",
              "category",
              "age",
              "sex",
              "promotion",
              "referrer",
              "zip"
            ]
          },
          "delimiter" : "|",
          "timestampSpec" : {
            "format" : "auto",
            "column" : "date"
          }
        }
      },
      "metricsSpec" : [
        {
          "name" : "count",
          "type" : "count"
        },
        {
          "name" : "zip_unique",
          "type" : "hyperUnique",
          "fieldName" : "zip"
        }
      ]
    },
    "tuningConfig" : {
      "type" : "hadoop",
      "partitionsSpec" : {
        "type" : "hashed",
        "targetPartitionSize" : 50000000
      },
      "jobProperties" : {}
    }
  }
}
